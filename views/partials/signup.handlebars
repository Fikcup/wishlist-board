<div class="sign-up">
    <div class="login-header">
        <h2>Sign Up</h2>
    </div>

    <div id="signup">
        <form id="signup-form">
            <label for="username-signup">Username</label>
            <input type="text" id="username-signup" />

            <label for="password-signup">Password</label>
            <input type="text" id="password-signup" />

            <label for="first-name-signup">First Name</label>
            <input type="text" id="first-name-signup" />

            <label for="last-name-signup">Last Name</label>
            <input type="text" id="last-name-signup" />

            <button type="submit" id="signup-btn" class="wish-btn">Submit</button>
            <a href="/login">Login instead</a>
        </form>
    </div>
</div>