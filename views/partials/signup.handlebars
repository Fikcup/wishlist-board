<div class="sign-up">
    <div class="login-header">
        <h2>Sign Up</h2>
    </div>

    <div id="signup">
        <form id="signup-form" name="signup">
            <input type="hidden" id="id-signup" name="_id" />

            <label for="username-signup">Username</label>
            <input type="text" id="username-signup" name="username"/>

            <label for="password-signup">Password</label>
            <input type="text" id="password-signup" name="userPassword"/>

            <label for="first-name-signup">First Name</label>
            <input type="text" id="first-name-signup" name="userFirst" />

            <label for="last-name-signup">Last Name</label>
            <input type="text" id="last-name-signup" name="userLast" />

            <button type="submit" id="signup-btn" class="wish-btn">Submit</button>
            <a href="/login">Login instead</a>
        </form>
    </div>

    <script src="/js/signup.js"></script>
</div>